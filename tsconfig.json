{
    "compilerOptions": {
        "target": "es2015",
        "module": "ESNext",
        "rootDir": "./src",
        "moduleResolution": "node",
        "declaration": true,
        "outDir": "./lib",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true
    },
    "include": ["src/**/*"]
}
